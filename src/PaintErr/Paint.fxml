<?xml version="1.0" encoding="UTF-8"?>

<?import PaintErr.ResizableCanvas?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PaintErr.PaintController">

    <top>
        <VBox>

            <MenuBar fx:id="menuBar">

                    <Menu text="New/Open">
                        <MenuItem onAction="#onNew" text="New Image" />
                        <MenuItem onAction="#onLocalOpen" text="Open from Computer..." />
                        <MenuItem onAction="#onLoad" text="Open from Database..." />
                    </Menu>
                    <Menu text="Save">
                        <MenuItem onAction="#onLocalSave" text="Save to Computer..." />
                        <MenuItem onAction="#onSave" text="Save to Database" />
                        <MenuItem onAction="#onSaveByID" text="Save to Database with an ID..." />
                    </Menu>
                    <Menu text="Close">
                        <MenuItem onAction="#onWelcome" text="Back to the Menu" />
                        <MenuItem onAction="#onExit" text="Exit program" />
                    </Menu>
            <VBox.margin>
               <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
                
            </MenuBar>

            <ToolBar snapToPixel="false">
                <HBox alignment="BOTTOM_CENTER" spacing="5" />
                <ColorPicker fx:id="colorPicker" promptText="Pick a colour">
               <padding>
                  <Insets left="10.0" />
               </padding></ColorPicker>
                <Slider fx:id="slider" blockIncrement="1" layoutX="26.0" layoutY="32.0" majorTickUnit="2" max="24" min="2" minorTickCount="1" prefHeight="45.0" prefWidth="270.0" showTickLabels="true" showTickMarks="true" snapToPixel="false" style="-fx-padding: 0 10 0 50;" value="4.0" />
                <CheckBox fx:id="eraser" nodeOrientation="RIGHT_TO_LEFT" prefHeight="21.0" prefWidth="113.0" style="-fx-padding: 0 20 0 0;" text="Eraser" />
                <Button fx:id="button" prefHeight="31.0" prefWidth="84.0" style="-fx-padding: 5px;" text="Clear all">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            </ToolBar>

        </VBox>
    </top>

    <center>
        <ResizableCanvas fx:id="canvas" height="700" width="1200" />
    </center>

</BorderPane>
